generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model producto {
  id    Int     @id @default(autoincrement())
  name  String
  descripcion String
}

model proveedor {
  id    Int     @id @default(autoincrement())
  name  String
  descripcion String

}

model Clientes {
  id               Int       @id @default(autoincrement())
  nombres          String
  apellidos        String
  genero           String
  fechaNacimiento  DateTime
  estado           Boolean

  @@map("clientes") 
}
